<Window x:Class="DiamondFAB.Quote.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer"
        Height="420" Width="560"
        WindowStartupLocation="CenterOwner"
        Background="#0F1115"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <SolidColorBrush x:Key="CardBrush"          Color="#181B22"/>
        <SolidColorBrush x:Key="CardBorderBrush"    Color="#242937"/>
        <SolidColorBrush x:Key="TextPrimaryBrush"   Color="#E9EDF5"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#AAB2C5"/>
        <SolidColorBrush x:Key="InputBgBrush"       Color="#111319"/>
        <SolidColorBrush x:Key="InputBorderBrush"   Color="#2A3040"/>
        <SolidColorBrush x:Key="AccentBrush"        Color="#4C8DF6"/>
        <SolidColorBrush x:Key="AccentBrushHover"   Color="#6EA2FF"/>

        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,10,0,4"/>
        </Style>

        <Style TargetType="TextBox" x:Key="Input">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource InputBgBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="36"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource CardBrush}"
            BorderBrush="{StaticResource CardBorderBrush}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="16"
            Margin="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2" Text="New Customer" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Company Name" Style="{StaticResource Label}"/>
                <TextBox  Grid.Row="1" Grid.Column="1" x:Name="CompanyNameBox" Style="{StaticResource Input}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Address" Style="{StaticResource Label}"/>
                <TextBox  Grid.Row="2" Grid.Column="1" x:Name="AddressBox" Style="{StaticResource Input}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Email" Style="{StaticResource Label}"/>
                <TextBox  Grid.Row="3" Grid.Column="1" x:Name="EmailBox" Style="{StaticResource Input}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Default Tax (%)" Style="{StaticResource Label}"/>
                <TextBox  Grid.Row="4" Grid.Column="1" x:Name="TaxBox" Style="{StaticResource Input}" Text="0"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Default Discount (%)" Style="{StaticResource Label}"/>
                <TextBox  Grid.Row="5" Grid.Column="1" x:Name="DiscountBox" Style="{StaticResource Input}" Text="0"/>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Margin="0,0,8,0" Height="36" MinWidth="120"
                        Background="#3B4358" Foreground="White"
                        Click="Cancel_Click"/>
                <Button Content="Save" Style="{StaticResource PrimaryButton}"
                        Click="Save_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>